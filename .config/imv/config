# https://github.com/eXeC64/imv/blob/master/files/imv_config

[options]
suppress_default_binds = true

[binds]
q = quit
y = exec echo $imv_current_file | wl-copy
p = prev
n = next
g = goto 1
<Shift+G> = goto -1
j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0
i = zoom 1
o = zoom -1
c = center
f = fullscreen
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset
# gif playback
<period> = next_frame
<space> = toggle_playing
# slideshow control
# t = slideshow +1
# <Shift+T> = slideshow -1