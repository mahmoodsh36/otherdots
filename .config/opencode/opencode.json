{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "local": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "local models",
      "options": {
        "baseURL": "http://localhost:5002/v1",
        "apiKey": "none"
      },
      "models": {
        "gpt-oss": {
          "name": "gpt-oss:20b",
          "limit": {
            "context": 100000,
            "output": 50000
          }
        },
        "qwen/qwen3-coder-30b": {
          "name": "qwen-coder",
          "limit": {
            "context": 100000,
            "output": 50000
          }
        }
      }
    }
  }
}
